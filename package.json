{
  "name": "xs-components",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git://github.com:jsxiaosi/xiaosiCommitLib.git"
  },
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "author": "",
  "license": "MIT",
  "scripts": {
    "ct": "bash ./script/template.sh",
    "clean": "rimraf ./lib",
    "dev": "cd effect && npm run dev",
    "test": "echo \"Error: no test specified\" && exit 1",
    "register:components": "vitepress-rc",
    "log": "conventional-changelog -p cmyr-config -i CHANGELOG.md -s -r 0",
    "type:web": "vue-tsc -p tsconfig.web.json --composite false --noEmit",
    "type:effect": "vue-tsc -p tsconfig.effect.json --composite false --noEmit",
    "type:node": "tsc -p tsconfig.node.json --composite false --noEmit",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs --port 9581",
    "build": "gulp --require @esbuild-kit/cjs-loader -f build/gulpfile.ts",
    "build:theme": "gulp --require @esbuild-kit/cjs-loader -f build/gulpfile.prod.ts",
    "lint:eslint": "eslint \"{packages,docs,build,effect}/**/*.{vue,ts,js}\" --fix",
    "lint:prettier": "prettier --write --loglevel warn \"src/**/*.{js,json,css,scss,vue,html,md}\"",
    "lint:stylelint": "stylelint --fix \"**/*.{vue,less,postcss,css,scss}\" --cache --cache-location node_modules/.cache/stylelint/",
    "lint:pretty": "pretty-quick --staged",
    "lint:staged": "lint-staged",
    "cz": "czg",
    "prepare": "husky install",
    "release": "bump package.json packages/*/package.json docs/*/package.json"
  },
  "devDependencies": {
    "@esbuild-kit/cjs-loader": "^2.4.1",
    "@jsdevtools/version-bump-prompt": "^6.1.0",
    "@jsxiaosi/commitlint-config": "^0.0.14",
    "@jsxiaosi/eslint-config-prettier": "^0.0.14",
    "@jsxiaosi/eslint-config-vue": "^0.0.14",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@types/fs-extra": "^9.0.13",
    "@types/gulp": "^4.0.10",
    "@types/gulp-autoprefixer": "^0.0.33",
    "@types/gulp-clean-css": "^4.3.0",
    "@types/gulp-postcss": "^8.0.2",
    "@types/gulp-sass": "^5.0.0",
    "@types/markdown-it-container": "^2.0.5",
    "@types/node": "^18.11.17",
    "@types/prismjs": "^1.26.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitejs/plugin-vue-jsx": "^3.0.0",
    "@vue/compiler-sfc": "^3.2.45",
    "@vue/tsconfig": "^0.1.3",
    "chalk": "5.2.0",
    "consola": "^2.15.3",
    "conventional-changelog-cli": "^2.2.2",
    "czg": "^1.4.1",
    "del": "^7.0.0",
    "esbuild": "^0.16.10",
    "eslint": "^8.30.0",
    "eslint-plugin-node": "^11.1.0",
    "fast-glob": "^3.2.12",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-postcss": "^9.0.1",
    "gulp-sass": "^5.1.0",
    "husky": "^8.0.2",
    "kolorist": "^1.6.0",
    "lint-staged": "^13.1.0",
    "postcss": "^8.4.20",
    "postcss-html": "^1.5.0",
    "postcss-import": "^15.1.0",
    "postcss-pxtorem": "^6.0.0",
    "prettier": "2.8.1",
    "pretty-quick": "^3.1.3",
    "rollup": "^3.8.1",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.34.1",
    "rollup-plugin-vue": "^6.0.0",
    "sass": "^1.57.1",
    "stylelint": "^14.16.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-recess-order": "^3.1.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.3.0",
    "ts-morph": "^17.0.1",
    "typescript": "^4.9.4",
    "unplugin-vue-macros": "^1.1.1",
    "vue": "^3.2.45",
    "vue-tsc": "^1.0.16"
  },
  "dependencies": {
    "@vueuse/core": "^9.9.0",
    "shiki": "^0.12.1"
  },
  "peerDependencyRules": {
    "ignoreMissing": [
      "vite"
    ]
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "rollup",
        "source-map-*",
        "stable",
        "uuid",
        "vite*",
        "urix"
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "{!(package)*.json,*.code-snippets,.!(browserslist)*rc}": [
      "prettier --write--parser json"
    ],
    "package.json": [
      "prettier --write"
    ],
    "*.vue": [
      "eslint --fix",
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{scss,less,styl,html}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
